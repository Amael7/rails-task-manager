<%= render 'form', task: @task %>
<% if @task.completed %>
  <i class="far fa-check-square"></i>
<% else %>
  Mark as done ?
  <%= link_to task_path(@task, :params => {:task => {completed: true}}), method: 'patch' do %>
    <i class="far fa-square"></i>
  <% end %>
<% end %>
<p>
  <i class="fas fa-undo"></i> <%= link_to "Back to List", tasks_path %>
</p>
